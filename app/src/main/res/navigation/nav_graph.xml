<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nowPlayingFragment">
    <fragment
        android:id="@+id/nowPlayingFragment"
        android:name="com.example.movieapp.nowPlayingFragment"
        android:label="Movie App"
        tools:layout="@layout/now_playing_list" >
        <action
            android:id="@+id/action_nowPlayingFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.movieapp.movieDetailsFragment"
        android:label="Movie Details" >
        <argument
            android:name="movieId"
            app:argType="string" />
    </fragment>
</navigation>